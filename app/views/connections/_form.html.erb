<%= render layout: 'shared/modal' do %>
  <%= simple_form_for connection, html: {class: 'ui form'} do |f| %>
    <div class="field">
      <%= f.input :name %>
    </div>

    <div class="field">
      <%= f.input :host %>
    </div>

    <div class="field">
      <%= f.input :user %>
    </div>

    <div class="field">
      <%= f.input :password %>
    </div>

    <div class="field">
      <%= f.input :port %>
    </div>
  <% end %>
<% end %>
